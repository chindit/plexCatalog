{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ app.user.email }}! âœ…</h1>

    {% if app.user.serverUrl is null or faulty_form %}
        {% if faulty_form %}
            <div class="alert alert-danger">Your connection informations are invalid or your Plex server is not reachable</div>
        {% endif %}
    {{ form(server_form) }}
    {% endif %}

    {% if app.user.lastSync < date('-1 month') %}
        <a href="{{ path('app_sync') }}" class="btn btn-primary">Re-sync my library</a>
    {% endif %}
</div>
{% endblock %}
